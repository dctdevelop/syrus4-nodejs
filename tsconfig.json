{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": ["es2020"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"rootDir": "src",
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}
